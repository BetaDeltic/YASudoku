<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:YASudoku.Controls"
             x:Class="YASudoku.Controls.ButtonWithSubText"
             x:Name="this"
             BackgroundColor="Transparent"
             x:DataType="controls:ButtonWithSubText"
    >
    <Border BindingContext="{x:Reference this}" 
            StrokeShape="RoundRectangle 10"
            StrokeThickness="0"
    >
        <VerticalStackLayout BackgroundColor="{Binding BackgroundColor}" Padding="10,0">
            <Label 
                Text="{Binding Text}"
                FontSize="30"
                HorizontalOptions="Center"
                Margin="5,0,5,-5"
                TextColor="{Binding TextColor}"
            />

            <Label 
                Text="{Binding SubText}"
                FontSize="20"
                HorizontalOptions="End"
                TextColor="{Binding TextColor}"
            />
        </VerticalStackLayout>
    </Border>
</ContentView>
