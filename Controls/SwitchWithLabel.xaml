<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="YASudoku.Controls.SwitchWithLabel"
>

    <VerticalStackLayout Padding="10,10">
        <Grid x:Name="GridWrapper" >
            <Label x:Name="TheLabel" VerticalTextAlignment="Center" />
            <Switch x:Name="TheSwitch" HorizontalOptions="End" />
        </Grid>
    </VerticalStackLayout>

</ContentView>
